<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/dimen_24"
    android:layout_marginEnd="@dimen/dimen_24"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/logoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimen_72"
        android:src="@drawable/ic_logo" />

    <com.mandarine.targetList.common.views.SignInButtonView
        android:id="@+id/emailButtonView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_below="@id/logoView"
        android:layout_marginTop="@dimen/dimen_72"
        android:background="@drawable/selector_button_sign_in"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/sign_in_with_email"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_16"
        app:allCaps="true"
        app:imageSrc="@drawable/ic_sign_email" />

    <com.mandarine.targetList.common.views.SignInButtonView
        android:id="@+id/googleButtonView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_48"
        android:layout_below="@id/emailButtonView"
        android:layout_marginTop="@dimen/dimen_24"
        android:background="@drawable/selector_button_sign_in"
        android:text="@string/sign_in_with_google"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_16"
        app:allCaps="true"
        app:imageSrc="@drawable/ic_sign_google" />

    <TextView
        android:id="@+id/privacyView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_24"
        android:ellipsize="end"
        android:gravity="center_horizontal"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_12"
        tools:text="By continuing, you are indicating that you accep our Terms of Service and Privacy Policy" />
</RelativeLayout>
