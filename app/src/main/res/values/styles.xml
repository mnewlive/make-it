<resources>

    <!--THEMES-->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--TYPOGRAPHY-->
    <style name="Text16GrayDarkRegular">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@color/gray_dark</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text16BlackRegular">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_16</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Text20BlackRegular">
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <!--DIVIDERS-->
    <style name="inner_full_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1</item>
        <item name="android:background">@color/gray_light</item>
    </style>

    <style name="full_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_1</item>
        <item name="android:background">@color/gray_light</item>
    </style>
</resources>
